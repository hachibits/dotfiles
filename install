#!/bin/bash

cd "$(dirname "${BASH_SOURCE[0]}")" || exit 1

BASE=$(pwd)

for rc in *rc *profile tmux.conf agignore emacs.d; do
  mkdir -pv bak
  [ -e ~/."$rc" ] && mv -v ~/."$rc" bak/."$rc"
  ln -sfv "$BASE/$rc" ~/."$rc"
done

# git-prompt
if [ ! -e ~/.git-prompt.sh ]; then
  curl https://raw.githubusercontent.com/git/git/master/contrib/completion/git-prompt.sh -o ~/.git-prompt.sh
fi

if [ "$(uname -s)" = 'Darwin' ]; then
  # Homebrew
  [ -z "$(which brew)" ] &&
    /bin/bash -c "$(curl -fsSL https://raw.githubusercontent.com/Homebrew/install/HEAD/install.sh)"

  echo "Updating homebrew"
  for pkg in xquartz iterm2 xbar macfuse \
    mat visualvm loop karabiner-elements \
    rstudio r mactex; do
    if ! brew list --cask -1 | grep -q "^${pkg}\$"; then
      brew install --cask $pkg
    fi
  done

  brew install \
    fd ag ripgrep ant cmake coreutils cscope exiftool doxygen liboauth \
    maven ranger tree vim wget zsh jq gcc ruby openjdk uv python go bat \
    fzf tmux neovim bash-completion reattach-to-user-namespace \
    pinentry-mac git sbt gnupg llvm

  brew tap universal-ctags/universal-ctags
  brew install --HEAD universal-ctags

  # Create
  gem install gem-ctags --user-install
  gem ctags
else
  rm -f ~/.tmux.conf
  grep -v reattach-to-user-namespace tmux.conf > ~/.tmux.conf
fi

mkdir -p ~/.local/bin
ln -sf /opt/homebrew/bin/g++-15 ~/.local/bin/g++

git config --global user.email "olxu@hotmail.com"
git config --global user.name "Oliver Xu"
git config --global user.signingKey D7D6E9E4 
git config --global commit.gpgsign true

tmux source-file ~/.tmux.conf

./install-vim
